<section id="deviseauth">
    <h2>Sign in</h2>

    <% if attendee %>

    <div id="remote">
        <div id="services" class="box">
            <%= link_to "/auth/google?token=#{attendee.escaped_acct_token}" do %>
            <%= image_tag "google_64.png", :size => "64x64",  :alt => "Google" %>
            Google
            <% end %>
            <%= link_to "/auth/github?token=#{attendee.escaped_acct_token}" do %>
            <%= image_tag "github_64.png", :size => "64x64",  :alt => "Github" %>
            Github
            <% end %>
            <%= link_to "/auth/twitter?token=#{attendee.escaped_acct_token}" do %>
            <%= image_tag "twitter_64.png", :size => "64x64",  :alt => "Twitter" %>
            Twitter
            <% end %>
        </div>
    </div>
    <% else %>
    Invalid Token
    <% end %>

</section>

