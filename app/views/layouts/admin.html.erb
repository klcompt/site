<!DOCTYPE html>
<%= render "/shared/html_tag" %>
  <% content_for :meta, "<meta refinerycms='#{Refinery.version}' />".html_safe %>
  <% content_for :stylesheets, ajaxful_rating_style %>
  <% content_for :stylesheets do %>
    <%= stylesheet_link_tag 'admin' %>
    <%= stylesheet_link_tag 'schedule' %>
  <% end -%>
  <% content_for :javascripts do -%>
    <%= javascript_include_tag 'rails.validations' %>
    <%= javascript_include_tag 'jscolor/jscolor' %>
  <% end -%>
  <%= render "/admin/head" %>
  <body class='<%= action_name %> <%= I18n.locale %>'>
    <%= render '/shared/site_bar' %>
    <div id='tooltip_container'></div>
    <header>
      <%= render "/admin/menu" %>
    </header>
    <div id="page_container">
      <div id="page">
        <div id="content" class="clearfix">
          <div id="flash_container">
            <%= render '/shared/no_script' %>
            <%= render "/shared/message" %>
          </div>
          <%= yield %>
        </div>
      </div>
    </div>
    <%= render "/admin/javascripts" %>
  </body>
</html>
