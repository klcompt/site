<div class="row_top_tile_sub">
  <div class="container_12">
    <div class="grid_8">
      <div class="page_title">
        <%= "Schedule" %>
      </div>
    </div>
  </div>
</div>

<div id="main" class="shape">
  <div class="container_12 pad3">
    <% sessions_for_schedule.each_pair do |session_day, session_times| %>
      <div class="p3">
        <h3><%= session_day %></h3>
        <% session_times.each_pair do |session_time, sessions| %>
          <ul class="free">
            <li class="column1" style="line-height: <%= sessions.size * 360 %>%">
              <%= time_period_for session_time %>
            </li>
            <% sessions.each do |session| %>
              <li class="column2">
                <div class="title"><%= link_to session.talk.title, session %></div>
                <span class="speaker"><%= speaker_for session.talk %></span> &middot; 
                <span class="room"><%= room_for session %></span> &middot;
                <span class="track">Track Name</span> &middot;
                <span class="trackball" style="background: #<%= track_color session %>"></span>
              </li>
            <% end -%>
          </ul>
        <% end -%>
      </div>
    <% end -%>
  </div>
</div>
