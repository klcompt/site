<% content_for :body_content_title do %>
  <%= @proposal.status %>
<% end %>

<% content_for :body_content_left do %>

  <section>
    <h1>Status</h1>
<p>    <%=raw @proposal.status %>
</p>
  </section>

<% end %>

<% content_for :body_content_right do %>
<aside>
  <h2><%= t('.other') %></h2>
  <ul id="proposals">
    <% @proposals.each do |proposal| %>
      <li>
        <%= link_to proposal.status, proposal_url(proposal) %>
      </li>
    <% end %>
  </ul>
</aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
